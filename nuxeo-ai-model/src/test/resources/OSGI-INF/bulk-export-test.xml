<?xml version="1.0"?>
<component name="org.nuxeo.ai.bulk.services.test" version="1.0">

  <require>org.nuxeo.ai.bulk.services</require>
  <extension target="org.nuxeo.ecm.core.bulk" point="actions">
    <action name="bulkDatasetExport" bucketSize="5" batchSize="2"/>
  </extension>
  <extension target="org.nuxeo.runtime.stream.service" point="streamProcessor">
    <streamProcessor name="bulkExport" class="org.nuxeo.ai.bulk.DataSetBulkAction" logConfig="bulk"
                     defaultConcurrency="2" defaultPartitions="2">
      <policy name="training" batchCapacity="10" batchThreshold="5s" maxRetries="0" continueOnFailure="true"/>
      <policy name="validation" batchCapacity="5" batchThreshold="3s" maxRetries="0" continueOnFailure="true"/>
    </streamProcessor>
  </extension>

</component>